@model _CitySearchVM

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<form method="get" action="/city/search">
    <table>
        <tr>
            <td><label for="countryCode">Country Code:</label></td>
            <td><input type="text" name="countryCode" id="countryCode" value="@Model.CountryCode"/></td>
        </tr>
        <tr>
            <td><label for="district">District:</label></td>
            <td><input type="text" name="district" id="@Model.District" /></td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="Search" /></td>
        </tr>
    </table>
</form>

<h2>Search Results:</h2>

<!--Display search results here-->

<partial name="_CityList" model="Model.Cities" />


