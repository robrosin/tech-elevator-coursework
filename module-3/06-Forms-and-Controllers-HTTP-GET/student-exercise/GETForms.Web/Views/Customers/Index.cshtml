@model CustomerSearch
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-controller="Customers" asp-action="SearchResult" method="get">
    <div>
        <label>Name</label>
        <input asp-for="Name" type="text" placeholder="Enter a name" />
    </div>
    <div>
        <label>Sort By</label>
        <select asp-for="SortMethod" asp-items="CustomerSearch.SortOptions"></select>
    </div>
    <div>
        <input type="submit" value="submit" />
    </div>

</form>