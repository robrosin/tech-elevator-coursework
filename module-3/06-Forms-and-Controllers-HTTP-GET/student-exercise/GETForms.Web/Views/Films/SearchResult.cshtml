@model IList<Film>
@{
    ViewData["Title"] = "SearchResult";
}

<h2>Search Result</h2>

<div style="display: flex">
    <p>Title</p>
    <p class="description">Description</p>
    <p>Release Year</p>
    <p>Length</p>
    <p>Rating</p>
</div>

<div style="display:flex; flex-wrap: wrap">
    @for (int i = 0; i < Model.Count; i++)
    {
        <p>@Model[i].Title</p>
        <p class="description">@Model[i].Description</p>
        <p>@Model[i].ReleaseYear</p>
        <p>@Model[i].Length</p>
        <p>@Model[i].Rating</p>
    }
</div>