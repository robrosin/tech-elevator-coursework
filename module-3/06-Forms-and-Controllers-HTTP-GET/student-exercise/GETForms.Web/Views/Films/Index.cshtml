@model FilmSearch
@{
    ViewData["Title"] = "Index";
}

<h2>Film Search</h2>

<form asp-controller="Films" asp-action="SearchResult" method="get">
    <div>
        <label asp-for="MinimumLength"></label>
        <input asp-for="MinimumLength" type="number" placeholder="Enter a Minimum Length" />
    </div>
    <div>
        <label asp-for="MaximumLength"></label>
        <input asp-for="MaximumLength" type="number" placeholder="Enter a Maximum Length" />
    </div>
    <div>
        <select asp-for="Genre" asp-items="FilmSearch.Genres"></select>
    </div>
    <div>
        <input type="submit" value="submit" />
    </div>
</form>