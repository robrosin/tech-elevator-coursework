@model Recipe
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Name</h1>

<style>
    .summary {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-column-gap: 20px;
    }

    .summary-image img {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: #777 10px 10px 6px;
    }
    .summary-image{
        justify-self: center;
    }
</style>

<div class="summary">
    <div class="summary-info">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Prep Time</td>
                    <td>@Model.PrepTime</td>
                </tr>
                <tr>
                    <td>Cook Time</td>
                    <td>@Model.CookTime</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="summary-image">
        @if (String.IsNullOrEmpty(Model.ImageFile))
        {
            <img src="~/images/ImageNotAvailable.jpg" />
        }
        else
        {
            <img src="@Model.ImageFile" />
        }
    </div>
</div>

<h2>Ingredients</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ingredient ing in Model.Ingredients)
        {
            <tr>
                <td>@ing.Name</td>
                <td>@ing.Quantity</td>
                <td>@ing.Unit</td>
            </tr>
        }
    </tbody>
</table>

<h2>Steps</h2>
<div>
    @{
        string[] listItems = Model.Steps.Split("\r\n", StringSplitOptions.RemoveEmptyEntries);
        <ol>
            @foreach (string item in listItems)
            {
                <li>@item</li>
            }
        </ol>
    }
</div>